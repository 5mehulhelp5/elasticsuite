<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminCreateThesaurusSection">
        <element name="createThesaurusButton" type="button" selector="#save" timeout="30"/>
        <element name="typeDropdown" type="select" selector="select[name='type']"/>
        <element name="activeDropdown" type="select" selector="select[name='is_active']"/>
        <element name="storeId" type="select" selector="#store_id"/>
        <element name="thesaurusNameInput" type="input" selector="input[name='name']"/>
        <element name="saveButton" type="button" selector="#save" timeout="90"/>
        <element name="successMessage" type="text" selector=".message-success"/>
    </section>
</sections>
