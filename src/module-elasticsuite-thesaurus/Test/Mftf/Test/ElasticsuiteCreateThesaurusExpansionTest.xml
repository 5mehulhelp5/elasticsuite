<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="ElasticsuiteCreateThesaurusExpansionTest">
        <annotations>
            <features value="ElasticSuiteThesaurus"/>
            <stories value="Create a Thesaurus with expansion type via the Admin"/>
            <title value="We can create Expansion Thesaurus"/>
            <description value="We can create Expansion Thesaurus"/>
            <severity value="CRITICAL"/>
            <testCaseId value="ElasticSuiteThesaurus-2"/>
            <group value="elasticSuiteThesaurus"/>
        </annotations>
        <after>
            <actionGroup ref="logout" stepKey="logout"/>
        </after>

        <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
        <actionGroup ref="CreateThesaurusActionGroup" stepKey="createThesaurus"/>

        <!-- select type of the Thesaurus -->
        <selectOption selector="{{AdminCreateThesaurusSection.typeDropdown}}" userInput="{{ExpansionThesaurus.type}}" stepKey="selectType"/>
        <click selector="{{AdminCreateThesaurusSection.createThesaurusButton}}" stepKey="clickOnCreateNewThesaurus"/>
        <waitForPageLoad stepKey="waitForPageToLoad3"/>
        <fillField selector="{{AdminThesaurusGeneralFieldSection.thesaurusNameInput}}" userInput="{{ExpansionThesaurus.name}}" stepKey="enterThesaurusName"/>
        <selectOption selector="{{AdminCreateThesaurusSection.activeDropdown}}" userInput="{{ExpansionThesaurus.is_active}}" stepKey="selectActive"/>
        <selectOption selector="{{AdminCreateThesaurusSection.storeId}}" userInput="{{ExpansionThesaurus.store_id}}" stepKey="selectStoreId"/>

        <click selector="{{AdminThesaurusExpansionSection.addButton}}" stepKey="clickOnAddExpansion"/>
        <fillField selector="{{AdminThesaurusExpansionSection.referenceTerms}}" userInput="{{ExpansionThesaurus.reference_terms}}" stepKey="enterReferenceTerms"/>
        <fillField selector="{{AdminThesaurusExpansionSection.expansionTerms}}" userInput="{{ExpansionThesaurus.values}}" stepKey="enterValues"/>

        <click selector="{{AdminThesaurusGeneralFieldSection.saveButton}}" stepKey="saveThesaurus"/>
        <seeElement selector="{{AdminCategoryMessagesSection.SuccessMessage}}" stepKey="assertSuccess"/>
        <see userInput="{{ExpansionThesaurus.name}}" stepKey="seeExpansion"/>
    </test>
</tests>
