<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" template="Magento_Config::system/config/js.phtml"/>
        </referenceContainer>
        <referenceContainer name="page.main.actions">
            <block class="Smile\ElasticSuiteCore\Block\Adminhtml\Relevance\Store\Switcher" name="smile.elasticsuite.relevance.config.switcher" template="Smile_ElasticSuiteCore::relevance/configuration/store/switcher.phtml">
                <arguments>
                    <argument name="switch_containers" xsi:type="string">1</argument>
                    <argument name="switch_store_views" xsi:type="string">1</argument>
                    <argument name="default_selection_name" xsi:type="string" translate="true">Default Config</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Magento\Config\Block\System\Config\Tabs" name="smile.elasticsuite.relevance.config.tabs" before="-"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block name="smile.elasticsuite.relevance.config.edit" class="Smile\ElasticSuiteCore\Block\Adminhtml\Relevance\Config\Edit"/>
        </referenceContainer>
    </body>
</page>
