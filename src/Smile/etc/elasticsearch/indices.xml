<?xml version="1.0"?>

<indices xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:noNamespaceSchemaLocation="urn:magento:module:Smile_ElasticSuiteCore:etc/elasticsearch/analysis.xsd">

    <index identifier="catalog_product">
        <type name="product">
            <mapping>
                <field name="description" type="string">
                    <is_searchable>1</is_searchable>
                    <used_in_spellcheck>0</used_in_spellcheck>
                    <used_in_autocomplete>0</used_in_autocomplete>
                    <search_weight>1</search_weight>
                    <is_filterable>1</is_filterable>
                    <is_filterable_in_search>1</is_filterable_in_search>
                </field>
                <field name="name" type="string">
                    <is_searchable>1</is_searchable>
                    <used_in_spellcheck>1</used_in_spellcheck>
                    <used_in_autocomplete>1</used_in_autocomplete>
                    <search_weight>10</search_weight>
                    <is_filterable>1</is_filterable>
                    <is_filterable_in_search>1</is_filterable_in_search>
                </field>
            </mapping>
        </type>
        <type name="offer"></type>
    </index>

</indices>