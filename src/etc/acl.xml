<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magento_Catalog::config_smile_elasticsuite_core_base_settings" title="smile_elasticsuite_core_base_settings" />
                        </resource>
                    </resource>
                    <resource id="Smile_ElasticsuiteCore::manage" title="Manage Search Engine configuration">
                        <resource id="Smile_ElasticsuiteCore::manage_relevance" title="Manage Relevance" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
