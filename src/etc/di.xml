        <arguments>
            <argument name="reader" xsi:type="object">Smile\ElasticSuiteCore\Relevance\Config\Structure\Reader</argument>
        </arguments>
    </virtualType>

    <virtualType name="Smile\ElasticSuiteCore\Model\Relevance\Config\Structure" type="Magento\Config\Model\Config\Structure">
        <arguments>
            <argument name="structureData" xsi:type="object">Smile\ElasticSuiteCore\Model\Relevance\Config\Structure\Data</argument>
        </arguments>
    </virtualType>

    <type name="Smile\ElasticSuiteCore\Controller\Adminhtml\Relevance\Config\Edit">
        <arguments>
            <argument name="configStructure" xsi:type="object">Smile\ElasticSuiteCore\Model\Relevance\Config\Structure</argument>
        </arguments>
    </type>

    <type name="Smile\ElasticSuiteCore\Controller\Adminhtml\Relevance\Config\Index">
        <arguments>
            <argument name="configStructure" xsi:type="object">Smile\ElasticSuiteCore\Model\Relevance\Config\Structure</argument>
        </arguments>
    </type>

    <type name="Smile\ElasticSuiteCore\Controller\Adminhtml\Relevance\Config\AbstractConfig">
        <arguments>
            <argument name="configStructure" xsi:type="object">Smile\ElasticSuiteCore\Model\Relevance\Config\Structure</argument>
        </arguments>
    </type>

    <type name="Smile\ElasticSuiteCore\Controller\Adminhtml\Relevance\Config\AbstractScopeConfig">
        <arguments>
            <argument name="configStructure" xsi:type="object">Smile\ElasticSuiteCore\Model\Relevance\Config\Structure</argument>
        </arguments>
    </type>



