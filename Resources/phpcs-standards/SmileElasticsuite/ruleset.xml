<?xml version="1.0"?>
<ruleset name="SmileElasticsuite">
    
    <description>Coding standard for Smile ElasticSuite projects.</description>
    
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
        <exclude name="PSR2.Methods.MethodDeclaration"/>
    </rule>
    
    <rule ref="Generic.Files.LineLength">
        <property name="lineLimit" value="135" />
        <property name="absoluteLineLimit" value="135 "/>
    </rule>
    
    <rule ref="Generic.ControlStructures.InlineControlStructure" />
    <rule ref="Generic.Formatting.SpaceAfterCast" />
    <rule ref="Generic.Functions.CallTimePassByReference" />
    <rule ref="Generic.NamingConventions.UpperCaseConstantName" />
    <rule ref="Generic.PHP.LowerCaseConstant" />
    <rule ref="Generic.CodeAnalysis.ForLoopWithTestFunctionCall" />
    <rule ref="Generic.Commenting.Fixme" />
    <rule ref="Generic.Commenting.Todo" />
    
    <rule ref="Squiz.Arrays.ArrayBracketSpacing" />
    <rule ref="Squiz.ControlStructures.ControlSignature" />
    <rule ref="Squiz.ControlStructures.ForEachLoopDeclaration" />
    <rule ref="Squiz.ControlStructures.ForLoopDeclaration" />
    <rule ref="Squiz.ControlStructures.LowercaseDeclaration" />
    <rule ref="Squiz.Functions.GlobalFunction" />
    <rule ref="Squiz.PHP.DisallowSizeFunctionsInLoops" />
    <rule ref="Squiz.PHP.LowercasePHPFunctions" />
    <rule ref="Squiz.PHP.ForbiddenFunctions" />
    <rule ref="Squiz.Scope.StaticThisUsage" />
    <rule ref="Squiz.Scope.MemberVarScope" />
    <rule ref="Squiz.WhiteSpace.OperatorSpacing" />
    
    <rule ref="PSR2.Classes.PropertyDeclaration">
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore" />
    </rule>
     
    <rule ref="SmileElasticsuite.Arrays.MultiLineArrayComma" />
    <rule ref="SmileElasticsuite.Formatting.BlankLineBeforeReturn" />
    <rule ref="SmileElasticsuite.NamingConventions.ValidClassName" />
    <rule ref="SmileElasticsuite.Objects.ObjectInstantiation" />
    <rule ref="SmileElasticsuite.Scope.MethodScope" />
    
    <rule ref="SmileElasticsuite.WhiteSpace.AssignmentSpacing" />
    <rule ref="SmileElasticsuite.WhiteSpace.BinaryOperatorSpacing" />
    <rule ref="SmileElasticsuite.WhiteSpace.CommaSpacing" />
    <rule ref="SmileElasticsuite.WhiteSpace.DiscourageFitzinator" />
    
    <rule ref="SmileElasticsuite.Classes.MultipleClassesOneFile" />
    <rule ref="SmileElasticsuite.Classes.PropertyDeclaration" />
    
    <rule ref="SmileElasticsuite.Functions.ScopeOrder" />
     
    <rule ref="Squiz.Commenting.InlineComment">
        <exclude name="Squiz.Commenting.InlineComment.DocBlock" />
    </rule>
    <rule ref="Squiz.Commenting.VariableComment" />
    
    <rule ref="SmileElasticsuite.Commenting.FileComment" /> 
    <rule ref="SmileElasticsuite.Commenting.ClassComment" />
    <rule ref="SmileElasticsuite.Commenting.FunctionComment" />    
</ruleset>
